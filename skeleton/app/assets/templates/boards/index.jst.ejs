<h1>Boards</h1>

<ul>
  <% boards.each(function (board) { %>
    <li>
      <a href="#/board/<%= board.get("id") %>">
        <%= board.escape("title") %>
        <button class="delete-board"
            data-id="<%= board.get("id") %>">Delete</button>
      </a>
    </li>
  <% }); %>
</ul>

<h3>Create a New Board!</h3>
<form>
  <label for="board_title">Title</label>
  <input type="text" id="board_title" name="board[title]">

  <button class="new-board">Create Board!</button>
</form>